{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "CommonJS",                 
    "moduleResolution": "node",          
    "esModuleInterop": true,             
    "strict": true,                       
    "outDir": "./dist",                  
    "resolveJsonModule": true,           
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*",  "DB/models" , "DB/Connection"],
  "exclude": ["node_modules", "dist"]
}
